    <div class="min-h-screen pt-24">
        <%- include('./partials/header') %>

        <% if (success.length > 0) { %>
            <div class="fixed top-20 left-1/2 -translate-x-1/2 p-3 rounded-lg bg-blue-500 z-40">
                <span class="text-white"><%= success %></span>
            </div>
        <% } %>

        <div class="w-full flex items-start px-20 py-11 relative z-10">
            <div class="w-[25%] fixed left-20 top-36 flex flex-col items-start">
                <div class="flex items-start gap-2">
                    <h3>Sort by</h3>
                    <form action="/shop">
                        <select class="border px-2 py-1" name="sortby">
                            <option value="popular">Popular</option>
                            <option value="newest">Newest</option>
                        </select>
                    </form>
                </div>
                <div class="flex flex-col mt-20">
                    <a class="block w-fit mb-2" href="#">New Collection</a>
                    <a class="block w-fit mb-2" href="#">All Products</a>
                    <a class="block w-fit mb-2" href="#">Discounted Products</a>
                </div>
                <div class="mt-32">
                    <a class="block w-fit mb-2" href="#">Filter by:</a>
                    <a class="block w-fit mb-2" href="#">Availability</a>
                    <a class="block w-fit mb-2" href="#">Discount</a>
                </div>
            </div>

            <div class="w-[75%] ml-[25%] flex flex-col gap-5">
                <div class="w-full flex flex-wrap items-start gap-5">
                    <% products.forEach((product) => { %>
                        <div class="w-[15.5vw] bg-red-500">
                            <div class="w-full h-52 bg-[<%= product.bgColor %>]">
                                <img class="w-full h-full object-cover object-center"
                                    src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                            </div>
                            <div class="flex justify-between items-center bg-[<%= product.panelColor %>] px-4 py-4 text-[<%= product.textColor %>]">
                                <div>
                                    <h3><%= product.name %></h3>
                                    <h4><%= product.price %></h4>
                                </div>
                                <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                                    href="/addToCart/<%= product._id %>">
                                    <i class="ri-add-line"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <%- include('./partials/footer') %>
    </div>
</body>
